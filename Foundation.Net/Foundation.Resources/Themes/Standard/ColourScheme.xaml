<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>

    <LinearGradientBrush x:Key="DefaultWindowTitleBrush" EndPoint="1,0" StartPoint="0,0">
        <GradientStop Color="CornflowerBlue" Offset="0" />
        <GradientStop Color="LightCyan" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ErrorWindowTitleBrush" EndPoint="1,0" StartPoint="0,0">
        <GradientStop Color="PaleVioletRed" Offset="0"/>
        <GradientStop Color="LightPink" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="QuestionWindowTitleBrush" EndPoint="1,0" StartPoint="0,0">
        <GradientStop Color="LimeGreen" Offset="0"/>
        <GradientStop Color="LightGreen" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="WarningWindowTitleBrush" EndPoint="1,0" StartPoint="0,0">
        <GradientStop Color="GreenYellow" Offset="0"/>
        <GradientStop Color="Yellow" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NotificationNotSetBackground" EndPoint="0.504,1.5" StartPoint="0.504,0.03">
        <GradientStop Color="#FFFDD5A7" Offset="0"/>
        <GradientStop Color="#FFFCE79F" Offset="0.567"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NotificationInformationBackground" EndPoint="0.504,1.5" StartPoint="0.504,0.03">
        <GradientStop Color="Azure" Offset="0"/>
        <GradientStop Color="LightBlue" Offset="0.567"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NotificationSuccessBackground" EndPoint="0.504,1.5" StartPoint="0.504,0.03">
        <GradientStop Color="PaleGreen" Offset="0"/>
        <GradientStop Color="Green" Offset="0.567"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NotificationWarningBackground" EndPoint="0.504,1.5" StartPoint="0.504,0.03">
        <GradientStop Color="LightYellow" Offset="0"/>
        <GradientStop Color="Yellow" Offset="0.567"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NotificationSeriousWarningBackground" EndPoint="0.504,1.5" StartPoint="0.504,0.03">
        <GradientStop Color="Yellow" Offset="0"/>
        <GradientStop Color="Yellow" Offset="0.567"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NotificationErrorBackground" EndPoint="0.504,1.5" StartPoint="0.504,0.03">
        <GradientStop Color="IndianRed" Offset="0"/>
        <GradientStop Color="Red" Offset="0.567"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NotificationFatalErrorBackground" EndPoint="0.504,1.5" StartPoint="0.504,0.03">
        <GradientStop Color="Red" Offset="0"/>
        <GradientStop Color="DarkRed" Offset="0.567"/>
    </LinearGradientBrush>

    <SolidColorBrush  x:Key="NotificationCommonForeground" Color="Black" />

    <SolidColorBrush  x:Key="DataGridMainForeground" Color="Black" />

    <SolidColorBrush  x:Key="DataGridMainBackground" Color="LightCyan" />
    <SolidColorBrush  x:Key="DataGridAlternateBackground" Color="LightBlue" />

    <SolidColorBrush  x:Key="DataGridRowSelectedBackground" Color="#0066D7" />
    <SolidColorBrush  x:Key="DataGridRowSelectedForeground" Color="#FFFFFF" />

    <SolidColorBrush  x:Key="SystemAdministratorBackgroundColour" Color="Black" />
    <SolidColorBrush x:Key="SystemAdministratorForegroundColour" Color="White" />

    <SolidColorBrush  x:Key="SystemSupervisorBackgroundColour" Color="Black" />
    <SolidColorBrush  x:Key="SystemSupervisorForegroundColour" Color="Yellow" />

</ResourceDictionary>
