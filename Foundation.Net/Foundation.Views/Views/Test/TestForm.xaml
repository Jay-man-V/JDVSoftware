<Window
    x:Class="Foundation.Views.Test.TestForm"
    x:Name="ThisWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

    xmlns:controls="clr-namespace:Foundation.Views"

    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:localBehaviours="clr-namespace:Foundation.Views"
    xmlns:fdc="clr-namespace:Foundation.Common.DataColumns;assembly=Foundation.Common"
    xmlns:gridHelpers="clr-namespace:Foundation.Common;assembly=Foundation.Common"
    xmlns:converters="clr-namespace:Foundation.Common;assembly=Foundation.Common"
    xmlns:local="clr-namespace:Foundation.Views"
    
    xmlns:commonMenuConfig="clr-namespace:Foundation.Common;assembly=Foundation.Common"

    MinWidth="400"
    MinHeight="400"
    mc:Ignorable="d"
    SizeToContent="WidthAndHeight"
    Title="{Binding FormTitle}"
    WindowStartupLocation="CenterScreen">
    <controls:StdWindowPanel
        Instructions="Use this form to test WPF controls"
        MessageBoxImage="Information"
        Title="Test form">

        <controls:StdWindowPanel.Resources>

            <DataTemplate x:Key="DefaultColumnTemplate" DataType="{x:Type gridHelpers:GridColumnDefinition}">
                <ContentControl>
                    <DataGridTextColumn
                        Header="{Binding ColumnHeaderName, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type gridHelpers:GridColumnDefinition}}}"
                        Binding="{Binding DataMemberName, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type gridHelpers:GridColumnDefinition}}}"
                    >
                    </DataGridTextColumn>
                </ContentControl>
            </DataTemplate>

            <DataTemplate x:Key="DropDownBoxColumnTemplate">
                <ContentControl>
                    <DataGridTextColumn
                        Header="{Binding ColumnHeaderName}"
                        Binding="{Binding DataMemberName}"
                        />
                </ContentControl>
            </DataTemplate>

            <DataTemplate x:Key="ImageDropDownBoxColumnTemplate">
                <ContentControl>
                    <DataGridTextColumn
                        Header="{Binding ColumnHeaderName}"
                        Binding="{Binding DataMemberName}"
                        />
                </ContentControl>
            </DataTemplate>

            <DataTemplate x:Key="NumericColumnTemplate">
                <ContentControl>
                    <DataGridTextColumn
                        Header="{Binding ColumnHeaderName}"
                        Binding="{Binding DataMemberName}"
                        />
                </ContentControl>
            </DataTemplate>

            <DataTemplate x:Key="DateTimeColumnTemplate">
                <ContentControl>
                    <DataGridTextColumn
                        Header="Created On"
                        Binding="{Binding CreatedOn, StringFormat='dd-MMM-yyyy HH:mm'}"
                    >
                    </DataGridTextColumn>
                </ContentControl>
            </DataTemplate>

            <DataTemplate x:Key="ImageColumnTemplate">
                <ContentControl>
                    <DataGridTextColumn
                        Header="{Binding ColumnHeaderName}"
                        Binding="{Binding DataMemberName}"
                        />
                </ContentControl>
            </DataTemplate>
        </controls:StdWindowPanel.Resources>
        
