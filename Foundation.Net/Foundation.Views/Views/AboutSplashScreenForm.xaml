<Window
    x:Class="Foundation.Views.AboutSplashScreenForm"
    x:Name="ThisWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

    xmlns:controls="clr-namespace:Foundation.Views"
    
    mc:Ignorable="d"
    Title="About Foundation.Views" Height="300" Width="600"
    BorderThickness="1"
    WindowStyle="None"
    SizeToContent="Height"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
>

    <Grid Margin="0,0,0,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="27" />
        </Grid.RowDefinitions>

        <controls:ScreenTitleControl Grid.Row="0" ScreenName="{Binding Product}" ScreenInstructions="{Binding CompanyName}" MessageBoxImage="None" />

        <GroupBox Grid.Row="1" Header="Application Information">
            <StackPanel>
                <controls:TextBoxControl IsReadOnly="True" Background="Transparent" BorderThickness="0" TextAlignment="Left" Text="{Binding Copyright, Mode=OneWay}" />
                <controls:TextBoxControl IsReadOnly="True" Background="Transparent" BorderThickness="0" TextAlignment="Left" Text="{Binding Trademark, Mode=OneWay}" />
                <controls:TextBoxControl IsReadOnly="True" Background="Transparent" BorderThickness="0" TextAlignment="Left" Text="{Binding Version, Mode=OneWay}" />
                <controls:TextBoxControl IsReadOnly="True" Background="Transparent" BorderThickness="0" TextAlignment="Left" Text="{Binding Configuration, Mode=OneWay}" />
                <controls:TextBoxControl IsReadOnly="True" Background="Transparent" BorderThickness="0" TextAlignment="Left" Text="{Binding ApplicationServer, Mode=OneWay}"/>
                <controls:TextBoxControl IsReadOnly="True" Background="Transparent" BorderThickness="0" TextAlignment="Left" Text="{Binding DatabaseServer, Mode=OneWay}"/>
                <controls:TextBoxControl IsReadOnly="True" Background="Transparent" BorderThickness="0" TextAlignment="Left" Text="{Binding DatabaseDetails, Mode=OneWay}"/>
            </StackPanel>
        </GroupBox>

        <controls:ExpanderControl Grid.Row="2" Header="User Information" IsExpanded="{Binding UserInformationExpanded, Mode=OneWay}">
            <StackPanel>
                <controls:TextBoxControl IsReadOnly="True" Background="Transparent" BorderThickness="0" TextAlignment="Left" Text="{Binding Username, Mode=OneWay}" />
                <controls:TextBoxControl IsReadOnly="True" Background="Transparent" BorderThickness="0" TextAlignment="Left" Text="{Binding Name, Mode=OneWay}" />
                <controls:TextBoxControl IsReadOnly="True" Background="Transparent" BorderThickness="0" TextAlignment="Left" Text="{Binding Email, Mode=OneWay}" />
                <controls:TextBoxControl IsReadOnly="True" Background="Transparent" BorderThickness="0" TextAlignment="Left" Text="{Binding Roles, Mode=OneWay}" />
            </StackPanel>
        </controls:ExpanderControl>

        <ProgressBar
            Grid.Row="3"
            Margin="0,1,0,-6"
            IsIndeterminate="True"
            Visibility="{Binding ProgressBarVisibility}"
            />
        <TextBlock
            Grid.Row="3"
            Margin="5,0,0,-5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding ProgressBarVisibility}"
            Text=" Loading..."
            />
        <controls:ButtonControl
            Grid.Row="3"
            Width="100"
            Margin="0,5,0,-2"
            Visibility="{Binding CloseButtonVisibility}"
            Command="{Binding CloseWindowCommand}"
            CommandParameter="{Binding ElementName=ThisWindow}"
            Content="_Close"
            />
    </Grid>
</Window>
